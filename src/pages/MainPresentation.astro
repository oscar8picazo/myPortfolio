---
import "bootstrap/dist/css/bootstrap-grid.css";
import "../styles/global.scss";
---

<main>
  <div class="arrowContainer">
    <div class="arrowToMe">
      <img src="arrow_to_me.png" />
      <div class="arrowHider" style="--time: 9s;"></div>
    </div>
  </div>
  <div class="downArrowContainer">
    <div class="arrowToMe">
      <img src="down_arrow.png" />
      <div class="downArrowHider" style="--time: 15s;"></div>
    </div>
  </div>
  <div class="signifier">
    <img class="circle" src="circle.svg" />
  </div>
  <div class="overlay">
    <div class="gridTitle">
      <div>
        <h2 class="subtitle overlayAnimation" style="--time: 1s;">Hello,</h2>
        <h2 class="subtitle overlayAnimation" style="--time: 2s;">
          my name is
        </h2>
      </div>
      <h1 class="title overlayAnimation" style="--time: 3.5s;">
        OSCAR MORALES
      </h1>
      <div class="carousel overlayAnimation" style="--time: 5.5s;">
        <div class="pre">I am</div>
        <div class="change_outer">
          <div class="change_inner">
            <div class="element">
              <h2>An Engineer</h2>
            </div>
            <div class="element">
              <h2>A Developer</h2>
            </div>
            <div class="element">
              <h2>Creative</h2>
            </div>
            <div class="element">
              <h2>Adaptable</h2>
            </div>
            <div class="element">
              <h2>Curious</h2>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

<style>
  .overlay {
    min-height: 96vh;
    background-color: var(--black-chocolate);
    min-width: 100vw;
    color: #ffff;
    display: flex;
  }

  .gridTitle {
    display: inline-block;
    place-self: center;
    margin: auto;
  }

  .subtitle {
    display: table-cell;
    font-weight: 400;
    font-size: 2rem;
    letter-spacing: -0.0525em;
    padding-right: 0.8rem;
  }

  .title {
    display: table-header-group;
  }

  .signifier {
    position: absolute;
    right: 43vw;
    bottom: 20vh;
  }

  .circle {
    position: sticky;
    display: none;
    width: 12vw;
    filter: invert(100%) sepia(71%) saturate(0%) hue-rotate(349deg)
      brightness(115%) contrast(101%);
    animation: scrollBlur ease 2.5s;
    animation-iteration-count: 3;
    animation-fill-mode: forwards;
    animation-delay: 9s;
    z-index: 11;
    opacity: 0;
  }

  .downArrowContainer {
    position: absolute;
    right: 1vw;
    bottom: 7vh;
    overflow: hidden;
  }

  .downArrowHider {
    background-color: var(--black-chocolate);
    height: 100%;
    width: 100%;
    position: absolute;
    top: 0;
    animation: downArrowSlide ease 1.5s;
    animation-fill-mode: forwards;
    animation-delay: var(--time);
  }

  @keyframes downArrowSlide {
    100% {
      top: 100%;
    }
  }

  .arrowContainer {
    position: absolute;
    left: 214px;
    bottom: 71vh;
  }

  .arrowToMe {
    position: relative;
  }

  .arrowHider {
    background-color: var(--black-chocolate);
    height: 100%;
    width: 100%;
    position: absolute;
    top: 0;
    animation: arrowSlide ease 1.5s;
    animation-fill-mode: forwards;
    animation-delay: var(--time);
  }

  @keyframes arrowSlide {
    100% {
      height: 0;
    }
  }

  @keyframes scrollBlur {
    20% {
      opacity: 1;
    }

    40% {
      filter: blur(2px) invert(100%) sepia(71%) saturate(0%) hue-rotate(349deg)
        brightness(115%) contrast(101%);
    }

    65% {
      filter: blur(0) invert(100%) sepia(71%) saturate(0%) hue-rotate(349deg)
        brightness(115%) contrast(101%);
      transform: translateY(-8rem);
      opacity: 1;
    }

    90% {
      opacity: 0;
      transform: translateY(-8rem);
    }
  }

  @media (max-width: 600px), (pointer: none), (pointer: coarse) {
    .circle {
      display: flex;
    }

    .overlay {
      min-height: 100vh;
    }

    .arrowContainer {
      display: none;
    }

    .downArrowContainer {
      display: none;
    }
  }

  @media (min-width: 601px) and (max-width: 960px) {
    .circle {
      display: flex;
      width: 2.5rem;
    }

    .signifier {
      position: absolute;
      right: 85vw;
      bottom: 20vh;
    }

    .arrowContainer {
      left: 200px;
      bottom: 81vh;
    }

    .arrowToMe img {
      max-width: 8vh;
    }
  }
</style>
